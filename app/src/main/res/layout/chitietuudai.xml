<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F3EBEB">

            <ImageView
                android:id="@+id/txtimage"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/loading_anh" />


            <TextView
                android:id="@+id/tenmonan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/txtimage"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="tên món ăn"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                        android:layout_toRightOf="@+id/txtimage"
                        android:layout_below="@+id/tenmonan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:drawableLeft="@drawable/buyandh"
                       android:layout_marginTop="20dp"
                        android:textColor="#E37D31"
                        android:textSize="20dp"
                        android:id="@+id/gia"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_toRightOf="@+id/gia"
                        android:layout_below="@+id/tenmonan"
                        android:id="@+id/money"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.000đ"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>