<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="65dp">
       <ImageView
           android:id="@+id/img"
           android:layout_width="60dp"
           android:layout_height="match_parent"
           android:src="@drawable/img1"
           android:layout_marginLeft="30dp"/>
       <TextView
           android:id="@+id/ten"
           android:layout_toRightOf="@+id/img"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="Lê Việt Long"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="20dp"
           android:textSize="23dp"
           android:textStyle="bold"/>
       <TextView
           android:layout_below="@+id/ten"
           android:layout_toRightOf="@+id/img"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="Thành viên mới"
           android:gravity="center"
           android:layout_marginTop="-30dp"
           android:layout_marginLeft="20dp"
           android:textSize="18dp"/>
   </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#FAF5F5"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ako"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/img1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="The Coffe House Rewards"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/taikhoan"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/img2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thông tin tài khoảng"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ahis"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/img3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nhạc Đăng Phát"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/aits"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/img4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Lịch sử"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ahaaa"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/img5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Giúp đỡ"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/img6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ays"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_toRightOf="@+id/img6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Cài đặt"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAF5F5">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng Xuất"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="22dp"/>
    </RelativeLayout>
</LinearLayout>